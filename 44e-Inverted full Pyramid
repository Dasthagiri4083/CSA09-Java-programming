import java.util.Scanner;
class pog
{
	public static void main(String[] args)
	{
		Scanner s=new Scanner(System.in);
		System.out.print("enter the number");
		int a=s.nextInt();
		for(int i=a;i>=1;i--)
		{
			for(int j=0;j<=a-i;j++)
			{
				System.out.print(" ");
			}
			for(int k=1;k<=2*i-1;k++)
			{
				System.out.print("*");
			}
			System.out.println();
		}
		s.close();
	}
}


