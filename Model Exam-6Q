import java.util.Scanner;
class pattern
{
 
	public static void main(String[] args) 
	{
		Scanner s=new Scanner(System.in);
		System.out.print("enter the number");
		int a=s.nextInt();
		System.out.print("enter the Symbol");
		char b=s.next().charAt(0);
		for(int i=1;i<=a;i++)
		{
			for(int k=3;k>=i-1;k--)
			{
				System.out.print(" ");
			}
			for(int j=1;j<=a;j++)
			{
				System.out.print(b);
			}
				System.out.println();
		}
		s.close();
	}
}
